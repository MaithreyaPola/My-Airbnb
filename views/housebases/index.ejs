<% layout('layouts/boilerplate') %>
    <h1>Houses</h1>
    <% for(let i of housebase){ %>
        <div class="card">
            <div class="row">
                <div class="col md-4">
                    <img class="img-fluid" src="<%= i.image %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title"><%= i.title %></h4>
                        <p class="card-description"><%= i.description %></p>
                        <p class="card-location">
                            <small class="text-muted"><%= i.location %></small>
                        </p>
                        <a class="btn btn-dark" href="/housebase/<%= i.id%>">View <%= i.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

