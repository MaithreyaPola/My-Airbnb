<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <img src="<%= housebase.image %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%=housebase.title %></h5>
              <p class="card-text"><%=housebase.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted"><%= housebase.location %></li>
              <li class="list-group-item">$ <%= housebase.price %>/night</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-secondary" href="/housebase/<%= housebase._id %>/edit">Edit</a>
                <form class="d-inline" method="post" action="/housebase/<%= housebase._id %>?_method=DELETE">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
          </div>        
    </div>
</div>
    
